{
  "name": "caramel",
  "version": "0.1.0",
  "description": "Minimal Pulsate Web Client",
  "type": "module",
  "license": "Apache-2.0",
  "packageManager": "pnpm@9.12.1",
  "private": true,
  "sideEffects": false,
  "author": {
    "name": "pulsate-dev",
    "email": "info@pulsate.dev"
  },
  "engines": {
    "node": ">=20.0.0"
